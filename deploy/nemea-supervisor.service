[Unit]
Description=Nemea Supervisor
After=network.target local-fs.target remote-fs.target

[Service]
Type=forking
PIDFile=/home/ioku/school/diplomka/libs_from_git/installed_libs/var/run/nemea-supervisor/nemea-supervisor.pid
Environment=LANG=C
User=nemead
Group=nemead

ExecStart=/home/ioku/school/diplomka/nemea_src/nemea-supervisor/nemea-supervisor start
ExecReload=/home/ioku/school/diplomka/nemea_src/nemea-supervisor/nemea-supervisor reload
ExecStop=/home/ioku/school/diplomka/nemea_src/nemea-supervisor/nemea-supervisor stop
KillMode=none
PrivateTmp=false
PermissionsStartOnly=true
ExecStartPre=/usr/bin/mkdir -p /home/ioku/school/diplomka/libs_from_git/installed_libs/var/run/nemea-supervisor
ExecStartPre=/usr/bin/chown -R nemead:nemead /home/ioku/school/diplomka/libs_from_git/installed_libs/var/run/nemea-supervisor

[Install]
WantedBy=multi-user.target

